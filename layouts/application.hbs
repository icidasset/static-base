<!DOCTYPE html>
<html language="{{_all._locale}}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{title}}</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="{{asset_path 'stylesheets/application.css'}}" />
</head>
<body>


  <header>
    {{> header}}
  </header>


  {{!-- main container --}}
  <container>
    {{{contents}}}
  </container>


  {{!-- initial state --}}
  <script id="initial-state" type="application/json">
    {
      "initial_route": "{{_route}}"
    }
  </script>


  {{!-- initial data --}}
  <script id="initial-data" type="application/json">
    {{{data_as_json}}}
  </script>


  {{!-- bundled javascript --}}
  <script src="{{asset_path 'jspm_packages/system.js'}}"></script>
  <script src="{{asset_path 'javascripts/jspm_config.js'}}"></script>
  <script src="{{asset_path 'javascripts/handlebars.js'}}"></script>
  <script src="{{asset_path 'javascripts/templates.js'}}"></script>
  <script src="{{asset_path 'javascripts/application.js'}}"></script>


</body>
</html>
